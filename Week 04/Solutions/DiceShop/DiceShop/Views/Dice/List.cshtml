@model List<DiceShop.ViewModels.DicesViewModel>

@{
    Layout = "/Views/Shared/_BasicLayout.cshtml";
}

<div class="col-sm-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Rigged</th>
                <th>Supplier</th>
                <th>Controls</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {

                    Html.RenderPartial("DiceTableRow", Model[i]);
            }   
        </tbody>
    </table>
</div>
<div class="col-sm-12">
    <a href="@Url.Action("EditItem","Dice",new {itemId=-1 })">Add</a>
</div>
@section scripts{
    <script type="text/javascript">
        
    </script>
}